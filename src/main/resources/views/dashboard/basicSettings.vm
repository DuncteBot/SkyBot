#define ($scripts)
<script>
    M.FormSelect.init(document.querySelectorAll('select'));

    function displayColor(value) {
        id('embedPreview').style.background = value;
    }

    function showColorPicker() {
        id('embedColor').click()
    }

    function checkSelect(selectId, checkBox) {
        let box = id(checkBox);
        let select = id(selectId);
        if (select.value) {
            box.checked = true;
            box.disabled = false;
        } else {
            box.checked = false;
            box.disabled = true;
        }
    }
</script>
