{% extends '../templates/base.twig' %}

{% block container %}

    <div class="row">
        <h5>Selected guild: {{ guild.getName() }}</h5>
        <a href="/server/{{ guild.getIdLong() }}/">Go back</a>
    </div>
    <div class="row">
        <form class="col s12" method="post">
            {# Spam filter #}
            {% include "includes/moderation/modlogAndSwitches.twig"%}

            <div class="row">
                <hr>
            </div>

            {% include "includes/moderation/muteAndKick.twig"%}

            <div class="row">
                <hr>
            </div>

            {% include "includes/moderation/spamLimits.twig"%}

            <div class="row">
                <hr>
            </div>

            {% include "includes/moderation/warnActions.twig"%}

            <button type="submit" class="btn waves-effect waves-light waves-ripple blue accent-4 white" value="submit">
                Save
            </button>
        </form>
    </div>

{% endblock %}

{% block script %}
    <script>
        window.isPatronGuild = {{ guild_patron }};
    </script>
    {% if guild_patron %}
        <script src="/js/warnactions.js"></script>
    {% else %}
        <script>
            function addWarnAction() {
                alert('Free servers only get one warn action\nWant more? Consider supporting the bot by making your server a patron server');
            }
        </script>
    {% endif %}
    <script src="/js/moderation.js"></script>
{% endblock %}
