<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
		 http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.3.xsd">
    <changeSet id="1" author="duncte123">
        <createTable tableName="guild_settings">
            <column name="guild_id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="prefix" type="varchar(10)" defaultValue="db!">
                <constraints nullable="false"/>
            </column>
            <column name="auto_role_id" type="bigserial"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
